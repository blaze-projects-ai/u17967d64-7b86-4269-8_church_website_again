<%- include('partials/header') %>

  <section class="page-hero">
    <div class="container">
      <h1>Contact Us</h1>
      <p>We'd love to hear from you. Reach out anytime.</p>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <div class="contact-grid">
        <div class="contact-info">
          <h2 class="section-title">Get In Touch</h2>

          <div class="contact-item">
            <div class="contact-icon">&#128205;</div>
            <div>
              <h3>Address</h3>
              <p>1234 Faith Avenue<br>Springfield, IL 62701</p>
            </div>
          </div>

          <div class="contact-item">
            <div class="contact-icon">&#128222;</div>
            <div>
              <h3>Phone</h3>
              <p>(217) 555-0142</p>
            </div>
          </div>

          <div class="contact-item">
            <div class="contact-icon">&#9993;</div>
            <div>
              <h3>Email</h3>
              <p>info@gracecommunity.example</p>
            </div>
          </div>

          <div class="contact-item">
            <div class="contact-icon">&#128336;</div>
            <div>
              <h3>Office Hours</h3>
              <p>Monday - Friday: 9:00 AM - 4:00 PM<br>Saturday: Closed<br>Sunday: 8:00 AM - 1:00 PM</p>
            </div>
          </div>
        </div>

        <div class="contact-form-wrapper">
          <% if (messageSent) { %>
          <div class="success-message">
            <div class="success-icon">&#10004;</div>
            <h3>Message Sent!</h3>
            <p>Thank you for reaching out. We'll get back to you as soon as possible.</p>
            <a href="/contact" class="btn btn-secondary">Send Another Message</a>
          </div>
          <% } else { %>
          <h2 class="section-title">Send Us a Message</h2>
          <form action="/contact" method="POST" class="contact-form">
            <div class="form-group">
              <label for="name">Your Name</label>
              <input type="text" id="name" name="name" required placeholder="John Smith">
            </div>
            <div class="form-group">
              <label for="email">Email Address</label>
              <input type="email" id="email" name="email" required placeholder="john@example.com">
            </div>
            <div class="form-group">
              <label for="subject">Subject</label>
              <input type="text" id="subject" name="subject" required placeholder="How can we help?">
            </div>
            <div class="form-group">
              <label for="message">Message</label>
              <textarea id="message" name="message" rows="5" required placeholder="Your message..."></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Send Message</button>
          </form>
          <% } %>
        </div>
      </div>
    </div>
  </section>

  <section class="section alt-bg">
    <div class="container text-center">
      <h2 class="section-title">Plan Your Visit</h2>
      <p>First time visiting? Here's what you can expect:</p>
      <div class="visit-info-grid">
        <div class="visit-info-card">
          <h3>Casual & Welcoming</h3>
          <p>Come as you are. There's no dress code â€” we want you to feel comfortable.</p>
        </div>
        <div class="visit-info-card">
          <h3>About 75 Minutes</h3>
          <p>Our services typically last about an hour and fifteen minutes.</p>
        </div>
        <div class="visit-info-card">
          <h3>Kids Are Welcome</h3>
          <p>Safe, fun children's programs available during both Sunday services.</p>
        </div>
      </div>
    </div>
  </section>

<%- include('partials/footer') %>
